        <rectangle left="27" top="0" width="120" height="25" color="transparent" strokeColor="White" strokeSize="1" cornerType="round" xradius="10" yradius="10">
            <label vertTextAlign="center" horzTextAlign="center" align="client" text="$(text)" fontColor="White" fontFamily="Courier New"/>
        </rectangle>
    </template>

    <template name="EquipBox">
        <rectangle left="4" top="0" width="23" height="23" color="transparent" cornerType="round" xradius="9" yradius="9">
            <CheckBox left="0" top="0" field="$(field)"/>
        </rectangle>
        <rectangle left="27" top="0" width="250" height="25" color="transparent" strokeColor="White" strokeSize="1" cornerType="round" xradius="10" yradius="10">
            <label vertTextAlign="center" horzTextAlign="center" align="client" text="$(text)" fontColor="White" fontFamily="Courier New"/>
        </rectangle>
    </template>

    <template name="RitualBox">
