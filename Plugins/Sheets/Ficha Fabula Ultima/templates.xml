        <rectangle left="27" top="0" width="120" height="25" color="transparent" strokeColor="White" strokeSize="1" cornerType="round" xradius="10" yradius="10">
            <label vertTextAlign="center" horzTextAlign="center" align="client" text="$(text)" fontColor="White" fontFamily="Courier New"/>
        </rectangle>
    </template>

