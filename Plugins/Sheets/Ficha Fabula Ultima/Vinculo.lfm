<?xml version="1.0" encoding="UTF-8"?>
<form name="frmVinculo" width="440" height="25" theme="dark">
    <import file="templates.xml"/>

	<script>
		<![CDATA[
		local function askForDelete()
			Dialogs.confirmYesNo("Deseja realmente apagar esse vinculo?",
								 function (confirmado)
									if confirmado then
										NDB.deleteNode(sheet);
									end;
								 end);
		end;

		local function showVinPopup()
			local pop = self:findControlByName("popVin");
				
			if pop ~= nil then
				pop:setNodeObject(self.sheet);
				pop:showPopupEx("bottomCenter", self);
			else
				showMessage("NÃ£o encontrei o popup do vinculo para exibir.");
			end;
		end;
		]]>
	</script>

	<formatLabelEdit left="26" top="1" width="163" height="23" field="nomeVin"/>
	<button left="189" top="1" width="23" height="23" text="i" onClick="showVinPopup();"/>
	<button left="212" top="1" width="23" height="23" text="X" onClick="askForDelete();"/>
</form>