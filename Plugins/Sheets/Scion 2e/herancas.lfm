<?xml version="1.0" encoding="UTF-8"?>
<form name="herancas" height="25" align="top" margins="{bottom=10}">
<style>
label {
	fontSize: 14;
	fontColor: white;
	fontStyle: bold;
	textTrimming: character;
	fontFamily: Constantia;
}
edit {
	fontSize: 14;
	fontColor: #cdcdcd;
	textTrimming: character;
	fontFamily: Constantia;
	transparent: true;
}
comboBox {
	fontSize: 14;
	fontColor: #cdcdcd;
	textTrimming: character;
	fontFamily: Constantia;
	transparent: true;
	fontStyle:italic;
}
horzLine{
	strokeColor: #424242;
	margins: {top=7};
	align: top;
	
}
imageCheckBox{
	checkedImage: /images/checkBoxAtv.png;
	uncheckedImage: /images/checkBoxDes.png;
	height: 25;
	width: 14;
	align: right;
	margins: {left=3};
	autoChange: false;
}
rectangle.LinhaDeFora{
	align: top; 
	color: transparent; 
	strokeColor: #272727; 
	strokeSize: 2; 
	xradius: 25; 
	yradius: 25; 
	cornerType: bevel; 
	margins: {top=20, right=20, bottom=20, left=20};
	height: 1460;
}
rectangle.LinhaDeDentro{
	align: client; 
	color: transparent; 
	strokeColor: #272727; 
	strokeSize: 1; 
	xradius: 23; 
	yradius: 23; 
	cornerType: bevel; 
	margins: {top=5, right=5, bottom=5, left=5};
}
rectangle.Fundo{
	align: client; 
	color: #272727; 
	xradius: 20; 
	yradius: 20; 
	cornerType: bevel; 
	margins: {top=10, right=10, bottom=10, left=10};
}
label.Divisor {
	fontSize: 20;
	fontColor: white;
	fontStyle: bold;
	textTrimming: character;
	fontFamily: Constantia;
	horzTextAlign: center;
	autoSize: true;
	align: client;
	margins: {bottom=7};
}
label.AtrClasse{
	fontSize: 10;
	fontColor: white;
	textTrimming: character;
	fontFamily: Constantia;
	horzTextAlign: center;
	align: top;
}
flowLayout.Tabela{
	align: top; 
	orientation: horizontal; 
	horzAlign: center; 
	autoHeight: true; 
	maxControlsPerLine: 3; 
	margins: {left=20, top=20, bottom=30, right=20};
}
flowPart.flowCampo{
	minWidth: 220; 
	maxWidth: 220; 
	height: 25; 
	margins: {left=20, right=20, bottom=10};
}
edit.EditBold{
	fontSize: 14;
	fontColor: white;
	fontStyle: bold;
	textTrimming: character;
	fontFamily: Constantia;
}
</style>
	<layout align="client">
		<layout align="left" width="85" margins="{right=5}">
			<imageCheckBox field="fldCheckHer_01" name="nomeCheckHer_01" onClick="
				sheet.fldCheckHer_01 = not sheet.fldCheckHer_01;
				
				if(sheet.fldCheckHer_02) then 
					sheet.fldCheckHer_01 = true; 
					sheet.fldCheckHer_02 = false; 
					sheet.fldCheckHer_03 = false; 
					sheet.fldCheckHer_04 = false; 
					sheet.fldCheckHer_05 = false; 
				end;
			" />
			<imageCheckBox field="fldCheckHer_02" name="nomeCheckHer_02" onClick="
				sheet.fldCheckHer_02 = not sheet.fldCheckHer_02;
				
				if(sheet.fldCheckHer_02) then 
					sheet.fldCheckHer_01 = true; 
				else 
					sheet.fldCheckHer_01 = false;
				end;
				
				if(sheet.fldCheckHer_03) then 
					sheet.fldCheckHer_01 = true; 
					sheet.fldCheckHer_02 = true; 
					sheet.fldCheckHer_03 = false; 
					sheet.fldCheckHer_04 = false; 
					sheet.fldCheckHer_05 = false; 
				end;
			" />
			<imageCheckBox field="fldCheckHer_03" name="nomeCheckHer_03" onClick="
				sheet.fldCheckHer_03 = not sheet.fldCheckHer_03;
				
				if(sheet.fldCheckHer_03) then 
					sheet.fldCheckHer_01 = true; 
					sheet.fldCheckHer_02 = true; 
				else 
					sheet.fldCheckHer_01 = false; 
					sheet.fldCheckHer_02 = false; 
				end;
				
				if(sheet.fldCheckHer_04) then 
					sheet.fldCheckHer_01 = true; 
					sheet.fldCheckHer_02 = true; 
					sheet.fldCheckHer_03 = true; 
					sheet.fldCheckHer_04 = false; 
					sheet.fldCheckHer_05 = false; 
				end;
			" />
			<imageCheckBox field="fldCheckHer_04" name="nomeCheckHer_04" onClick="
				sheet.fldCheckHer_04 = not sheet.fldCheckHer_04;
				
				if(sheet.fldCheckHer_04) then 
					sheet.fldCheckHer_01 = true; 
					sheet.fldCheckHer_02 = true; 
					sheet.fldCheckHer_03 = true; 
				else 
					sheet.fldCheckHer_01 = false; 
					sheet.fldCheckHer_02 = false; 
					sheet.fldCheckHer_03 = false; 
				end;
				
				if(sheet.fldCheckHer_05) then 
					sheet.fldCheckHer_01 = true; 
					sheet.fldCheckHer_02 = true; 
					sheet.fldCheckHer_03 = true; 
					sheet.fldCheckHer_04 = true; 
					sheet.fldCheckHer_05 = false; 
				end;
			" />
			<imageCheckBox field="fldCheckHer_05" name="nomeCheckHer_05" onClick="
				sheet.fldCheckHer_05 = not sheet.fldCheckHer_05;
				
				if(sheet.fldCheckHer_05) then 
					sheet.fldCheckHer_01 = true; 
					sheet.fldCheckHer_02 = true; 
					sheet.fldCheckHer_03 = true; 
					sheet.fldCheckHer_04 = true; 
				else 
					sheet.fldCheckHer_01 = false; 
					sheet.fldCheckHer_02 = false; 
					sheet.fldCheckHer_03 = false; 
					sheet.fldCheckHer_04 = false; 
				end;
			" />
		</layout>
		<button name="nomeBut" text="𝐢" width="22" height="22" align="left" margins="{top=1, bottom=1, right=5}" fontColor="#272727">
				<event name="onClick">
				<![CDATA[
					local pop = self:findControlByName("popUp_");
					
					if pop ~= nil then
						pop:setNodeObject(sheet);
						pop:showPopupEx("mouse", self.nomeTru_);
					else
						showMessage("Ops, não encontrei o pop-up para exibir");
					end;
				]]>
				</event>
			</button>
			<button name="nomeButB" text="𝐢" width="22" height="22" align="left" margins="{top=1, bottom=1, right=5}" fontColor="white" visible="false">
				<event name="onClick">
				<![CDATA[
					local pop = self:findControlByName("popUp_");
					
					if pop ~= nil then
						pop:setNodeObject(sheet);
						pop:showPopupEx("mouse", self.nomeTru_);
					else
						showMessage("Ops, não encontrei o pop-up para exibir");
					end;
				]]>
				</event>
			</button>
			<popup name="popUp_" width="630" height="350" backOpacity="0" drawContainer="false">
				<rectangle align="client" color="#0e0e0e" padding="{top=5, left=5, bottom=5, right=5}" xradius= "10" yradius="10" cornerType="bevel">
					<rectangle align="client" color="#0e0e0e"  padding="{top=5, left=5, bottom=5, right=5}" xradius= "8" yradius="8" strokeColor="#272727" strokeSize="1"  cornerType="bevel">
						<label field="fldHerancas" height="35" fontSize="30" align="top" margins="{top=5, left=10, right=80}" />
						<label field="fldHerTipo" anchors="right top" right="0" top="25" horzTextAlign="trailing" />
						<horzLine align="top" margins="{left=10, right=10, top=10}" />
						<textEditor margins="{top=10, left=10, right=10, bottom=10}" align="client" transparent="true" fontColor="#cdcdcd" field="fld" name="nomeHer" fontFamily="Constantia" fontSize="15"/>
						<dataLink field="fld" defaultValue="Descrição da Herança">
								<event name="onChange">
								<![CDATA[
									if(sheet == nil) then return; end;
									if(sheet.fld == nil or sheet.fld == "Descrição da Herança") then
										self.nomeBut.visible = true;
										self.nomeButB.visible = false;
									else
										self.nomeButB.visible = true;
										self.nomeBut.visible = false;
									end;
								]]>
								</event>
						</dataLink>
					</rectangle>	
				</rectangle>
			</popup>
		<edit align="left" width="182" fontStyle="bold" field="fldHerancas" /><dataLink field="fldHerancas" defaultValue="—" />
		<comboBox field="fldHerTipo" align="left" items="{'Criatura', 'Guia', 'Relíquia', 'Seguidor'}" />
		<layout align="left" width="22" height="22">
			<button text="🞭" width="22" height="22" onClick="NDB.deleteNode(sheet);" hint="Apagar Herança" />
		</layout>
	</layout>
</form>